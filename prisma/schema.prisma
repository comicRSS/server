// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Comic {
    id              Int @default(autoincrement()) @id
    author          String
    description     String
    chpaters        Chapter[]
    tags            String
    cover           String
    isSerialized    Boolean @default(true)
    createdAt       DateTime
    updatedAt       DateTime
}


model Chapter {
    id          Int     @default(autoincrement()) @id
    title       String
    posts       Image[]
    comic       Comic @relation(fields: [comicId], references: [id])
    comicId     Int
    createdAt   DateTime
    updatedAt   DateTime
}

model Image {
    id          Int      @default(autoincrement()) @id
    imageSrc    String
    chapter     Chapter @relation(fields: [chapterId], references: [id])
    chapterId   Int
    createdAt   DateTime
    updatedAt   DateTime
}